<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="peliculas" transaction-type="RESOURCE_LOCAL">
		<class>com.hlc.dominio.Pelicula</class>
		<properties>
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/peliculas" />
			<property name="javax.persistence.jdbc.user" value="peliculas" />
			<property name="javax.persistence.jdbc.password" value="peliculas" />
		</properties>
	</persistence-unit>
</persistence>